@model List<StudentEmploymentPortal.ViewModels.StudentViewModels.RefereeViewModel>

<h2 class="mt-5">Referee</h2>
<button class="btn btn-primary" id="addRefereeButton">Add</button>
<br />
<br />
<div class="qualification-list">
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var referee in Model)
        {
            <div class="qualification-item">
                <span class="qualification-name">@referee.JobTitle</span>
                <div class="qualification-actions">
                    <button class="btn btn-primary editRefereeButton" data-refereeid="@referee.RefereeId">Edit</button>
                    <button class="btn btn-danger deleteRefereeButton" data-refereeid="@referee.RefereeId">Delete</button>
                </div>
            </div>
        }
    }
    else
    {
        <p>No referees found.</p>
    }

</div>

<!-- Add Qualification Partial View -->
<div id="addRefereePartial"></div>

<!-- Edit Qualification Partial View -->
<div id="editRefereePartial"></div>
