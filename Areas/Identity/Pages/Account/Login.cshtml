@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br/>
<br/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="section-content">
                <section>
                    <form id="account" method="post">
                        <h1 class="text-center">@ViewData["Title"]</h1>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating py-2">
                            <label asp-for="Input.Email" class="col-form-label-sm"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2">
                            <label asp-for="Input.Password" class="col-form-label-sm"></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input bg-dark" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button id="login-submit" type="submit" class="w-100 btn btn-md btn-primary">Log in</button>
                        </div>
                        <div>
                            @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>*@
                            <p>
                                <br/>
                                <a class="text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            @*<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
