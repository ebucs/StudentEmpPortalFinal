@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1 class="pt-4">@ViewData["Title"]</h1>*@
<br/>

<div class="container">
    <div class="row justify-content-center pt-4">
        <div class="col-md-7 section-content">
            <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center">Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Input.Email" class="col-form-label-sm"></label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.FirstName" class="col-form-label-sm"></label>
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.Surname" class="col-form-label-sm"></label>
                    <input asp-for="Input.Surname" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.Telephone" class="col-form-label-sm"></label>
                    <input asp-for="Input.Telephone" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.PhoneNumber" class="col-form-label-sm"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.Password" class="col-form-label-sm"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Input.ConfirmPassword" class="col-form-label-sm"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.Rolelist" class="form-select">
                        <option disabled selected>Student Or Recruiter ?</option>
                    </select>
                </div>
                <div class="py-2 col-12">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
