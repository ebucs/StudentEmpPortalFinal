@model StudentEmploymentPortal.ViewModels.RecruiterViewModels.JobPostViewModel

@{
    ViewData["Title"] = "Job Post Details";
}


<h1 class="section-heading">@ViewData["Title"]</h1>
<br />

<form id="ApproveRecruiterJobPost" method="post" asp-controller="Approver" asp-action="PartialJobPostDetails">
    @Html.AntiForgeryToken()
    <div class="section-content">
        <div class="table-responsive">
            <table class="custom-table">
                <tbody>
                    <tr>
                        <th>Recruiter Type</th>
                        <td>@Model.RecruiterType</td>
                    </tr>
                    @if (Model.RecruiterType.ToString() == "Internal")
                    {
                        <tr>
                            <th>Faculty</th>
                            <td>@Model.Faculty</td>
                        </tr>
                    }
                    <tr>
                        <th>Department</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th>Job Title</th>
                        <td>@Model.JobTitle</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>@Model.Location</td>
                    </tr>
                    <tr>
                        <th>Job Description</th>
                        <td>@Model.JobDescription</td>
                    </tr>
                    <tr>
                        <th>Key Responsibilities</th>
                        <td>@Model.KeyResponsibilities</td>
                    </tr>
                    <tr>
                        <th>Job Type</th>
                        <td>@Model.JobType</td>
                    </tr>
                    @if (Model.JobType.ToString() != "FullTime")
                    {
                        <tr>
                            <th>Part-Time Number of Hours</th>
                            <td>@Model.PartTimeNumberOfHours</td>
                        </tr>
                    }
                    <tr>
                        <th>Start Date</th>
                        <td>@Model.StartDate.ToString("MM/dd/yyyy")</td>
                    </tr>
                    <tr>
                        <th>End Date</th>
                        <td>@Model.EndDate.ToString("MM/dd/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Hourly Rate</th>
                        <td>@Model.HourlyRate</td>
                    </tr>
                    <tr>
                        <th>Nationality</th>
                        <td>@Model.Nationality</td>
                    </tr>
                    <tr>
                        <th>Minimum Requirements</th>
                        <td>@Model.MinRequirements</td>
                    </tr>
                    <tr>
                        <th>Application Instruction</th>
                        <td>@Model.ApplicationInstruction</td>
                    </tr>
                    <tr>
                        <th>Contact Person</th>
                        <td>@Model.ContactPerson</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Contact No</th>
                        <td>@Model.ContactNo</td>
                    </tr>
                    <tr>
                        <th>Years of Study Options</th>
                        <td>@string.Join(", ", Model.YearsOfStudyOptions)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <p style="font-size: 1.1em; font-weight: bold; color: red;">
            <strong>Closing Date:</strong> @Model.ClosingDate.ToString("MM/dd/yyyy")
        </p>
    </div>

    <div class="section-content py-2 col-12 ">
    <!-- Add input fields for adding a note and changing the outcome -->
  
        <div class="form-group py-2">
            <!-- Adjust the width using col- classes -->
            <label asp-for="ApproversNote" class="form-label">Add Note:</label>
            <textarea asp-for="ApproversNote" class="form-control" style="height: 150px;"></textarea> <!-- Adjust the height using inline style -->
        </div>

        <div class="form-floating mb-3">
            <!-- Adjust the width using col- classes -->
            <select asp-for="ApprovalStatus" asp-items="Model.ApprovalStatusOptions" class="form-select"></select>
            <label asp-for="ApprovalStatus">Approval Status</label>
        </div>


    </div>

    <!-- Add a submit button to save the changes -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button class="btn btn-danger close-button" asp-controller="Approver" asp-action="ManageRecruiterJobPosts">Close</button>
    </div>
   
</form>

