@using StudentEmploymentPortal.Areas.Identity
@using Microsoft.AspNetCore.Identity

<form method="post" enctype="multipart/form-data" action="/StudentApplicationJ/StudentApplication/UploadDocument">

    <div class="form-group">
        <label for="file" class="form-label mt-4">Choose a file:</label>
        <input type="file" id="file" name="file" class="form-control" />
    </div>

    <div class="form-floating py-2 col-12">
        <label class="col-form-label-sm" for="documentName">Enter document name</label>
        <input id="documentName" name="DocumentName" class="form-control" aria-required="true" />
    </div>
    <input type="hidden" name="ApplicationId" value="@ViewData["ApplicationId"]" />

    <button type="submit" class="btn btn-primary">Upload</button>
</form>
